
<head>
    <link rel="stylesheet" type="text/css" href="css/login.css">
</head>
<%if (success !=''){ %>
  <div class="alert alert-success">
  <strong>Success!</strong> <%= success %>
  </div>
  <%}%>
<div id="login">
    <form action="/register" method="POST" id="login_form">
        <div class="field_container">
            <input name="name" type="text" placeholder="Name" required >
          </div>
          <div class="field_container">
            <input name="usrname" type="text" placeholder="User_Name" required >
          </div>
        <div class="field_container">
        <input name="email" type="text" placeholder="Email Address" required>
      </div>
      
      <div class="field_container">
        <input type="Password" name="password" placeholder="Password" required>
        <button name="submit"  id="sign_in_button">
          <span class="button_text">Register</span>
        </button>
    </div>
    <div id="dont_have_an_account">
      <h2>
       <a href="/login" class="login_link">Login</a>
      </h2>
    </div>
  </div>